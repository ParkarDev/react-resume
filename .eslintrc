{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
        "indent": [2, 4, {"SwitchCase": 1}],
        "react/jsx-indent-props": 0,
        "react/prefer-stateless-function": 0
    }
}
